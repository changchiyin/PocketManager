<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/monthChooser"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/month"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="12月"
            android:autoSizeTextType="uniform"/>
        <ImageButton
            android:id="@+id/monthPicker"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"
            android:src="@color/purple_200" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/moneyInfo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/monthChooser">
        <TextView
            android:id="@+id/income"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="收入:"
            android:gravity="bottom"
            android:autoSizeTextType="uniform" />
        <TextView
            android:id="@+id/inMoney"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="123456"
            android:gravity="bottom"
            android:autoSizeTextType="uniform"/>
        <TextView
            android:id="@+id/coin1"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="元"
            android:gravity="bottom"
            android:autoSizeTextType="uniform"/>
        <TextView
            android:id="@+id/expenses"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="支出:"
            android:gravity="bottom"
            android:autoSizeTextType="uniform"/>
        <TextView
            android:id="@+id/outMoney"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="123456"
            android:gravity="bottom"
            android:autoSizeTextType="uniform"/>
        <TextView
            android:id="@+id/coin2"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="元"
            android:gravity="bottom"
            android:autoSizeTextType="uniform"/>
        <TextView
            android:id="@+id/sum"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="總計:"
            android:gravity="bottom"
            android:autoSizeTextType="uniform"/>
        <TextView
            android:id="@+id/sumMoney"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="123456"
            android:gravity="bottom"
            android:autoSizeTextType="uniform"/>
        <TextView
            android:id="@+id/coin3"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="元"
            android:gravity="bottom"
            android:autoSizeTextType="uniform"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/moneyInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/previousStep"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:src="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/nextStep"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:src="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/previousStep" />

    <ImageButton
        android:id="@+id/editor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:src="@color/purple_200"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adder"/>
    <ImageButton
        android:id="@+id/adder"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:src="@color/purple_200"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>