<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/monthPicker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:rotation="90"
        android:src="@android:drawable/ic_media_play"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/month"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/month"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:autoSizeTextType="uniform"
        android:text="年月"
        android:gravity="center|center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/income"
        android:layout_width="133dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:gravity="center|center_vertical"
        android:text="收入"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/month" />

    <TextView
        android:id="@+id/inMoney"
        android:layout_width="133dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:autoSizeTextType="uniform"
        android:gravity="center|center_vertical"
        android:text="123456"
        app:layout_constraintEnd_toStartOf="@+id/outMoney"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/income" />

    <TextView
        android:id="@+id/expenses"
        android:layout_width="133dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:gravity="center|center_vertical"
        android:text="支出"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/income"
        app:layout_constraintStart_toEndOf="@+id/income"
        app:layout_constraintTop_toTopOf="@+id/income" />

    <TextView
        android:id="@+id/outMoney"
        android:layout_width="133dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:autoSizeTextType="uniform"
        android:gravity="center|center_vertical"
        android:text="123456"
        app:layout_constraintBottom_toBottomOf="@+id/inMoney"
        app:layout_constraintEnd_toStartOf="@+id/sumMoney"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/inMoney"
        app:layout_constraintTop_toTopOf="@+id/inMoney" />

    <TextView
        android:id="@+id/sum"
        android:layout_width="133dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:gravity="center|center_vertical"
        android:text="總計"
        app:layout_constraintBottom_toBottomOf="@+id/expenses"
        app:layout_constraintStart_toEndOf="@+id/expenses"
        app:layout_constraintTop_toTopOf="@+id/expenses" />

    <TextView
        android:id="@+id/sumMoney"
        android:layout_width="133dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:autoSizeTextType="uniform"
        android:gravity="center|center_vertical"
        android:text="123456"
        app:layout_constraintBottom_toBottomOf="@+id/outMoney"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/outMoney"
        app:layout_constraintTop_toTopOf="@+id/outMoney" />
    <!--
    <include
        android:id="@+id/assetInfo"
        layout="@layout/asset_frame"
        android:layout_width="367dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outMoney" />
-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/externalRecyclerView"
        android:layout_width="340dp"
        android:layout_height="480dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outMoney" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/previousStep"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline17" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nextStep"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleX="-1"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_constraintBottom_toBottomOf="@+id/previousStep"
        app:layout_constraintEnd_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="@+id/previousStep" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:autoSizeTextType="uniform"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintBottom_toTopOf="@+id/adder"
        app:layout_constraintStart_toStartOf="@+id/guideline16" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/adder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:autoSizeTextType="uniform"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline16"
        app:layout_constraintTop_toTopOf="@+id/guideline17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="145dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="314dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>